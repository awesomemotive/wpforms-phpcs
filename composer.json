{
	"name": "awesomemotive/wpforms-phpcs",
	"description": "A set of phpcs sniffs for the WPForms.",
	"type": "phpcodesniffer-standard",
	"license": "MIT",
	"require": {
		"php": "^5.6|^7.0",
		"phpcompatibility/php-compatibility": "^9.3",
		"squizlabs/php_codesniffer": "^3.5",
		"wp-coding-standards/wpcs": "^2.3",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^4.0 || ^5.0 || ^6.0 || ^7.0"
	},
	"autoload-dev": {
		"psr-4": {
			"WPForms\\": "WPForms/",
			"WPForms\\Tests\\Tests\\": "WPForms/Tests"
		}
	},
	"scripts": {
		"cs": "vendor/bin/phpcs --standard=.phpcs.xml ./WPForms/",
		"unit": "vendor/bin/phpunit --configuration ./WPForms/Tests/phpunit.xml"
	}
}
